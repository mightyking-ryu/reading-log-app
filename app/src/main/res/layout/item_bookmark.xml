<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/list_style"
        android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/img_contact"
            android:background="#ff0"
            android:layout_width="132dp"
            android:layout_height="176dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_bookmark_in_book" />

        <LinearLayout
            android:orientation="vertical"
            android:background="@drawable/task_input_sel"
            android:padding="5dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/anoid_1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="책 제목" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:textStyle="bold"
                android:text="book title"
                android:textColor="#ff000000"
                android:id="@+id/bookmark_bookinfo"/>

            <TextView
                android:id="@+id/anoid_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="저자"
                android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="author"
                android:textSize="18sp"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:maxLines="1"
                android:id="@+id/bookmark_bookinfo2"/>

            <TextView
                android:id="@+id/anoid_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="전체 페이지 수"/>

            <TextView
                android:id="@+id/bookmark_bookinfo3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff000000"
                android:textStyle="bold"
                android:textSize="15sp"
                android:text="450페이지"/>

            <TextView
                android:id="@+id/anoid_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="읽기 시작한 날짜"
                android:maxLines="1"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ff000000"
                android:textSize="15sp"
                android:text="oooo년 oo월 oo일"
                android:textStyle="bold"
                android:maxLines="1"
                android:id="@+id/bookmark_bookinfo4"/>

        </LinearLayout>




        </LinearLayout>



    </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:gravity="end"
            android:layout_gravity="right"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <Button
                android:id="@+id/bookmark_record"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:text="기록하기"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/list_style"
                android:scaleType="fitCenter"
                android:drawableRight="@drawable/ic_fix" />

            <Button
                android:id="@+id/bookmark_startreading"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:text="책 읽기"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/list_style"
                android:scaleType="fitCenter"
                android:drawableRight="@drawable/ic_fix" />

            <Button
                android:id="@+id/bookmark_fix"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:text="수정하기"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/list_style"
                android:scaleType="fitCenter"
                android:drawableRight="@drawable/ic_fix" />

            <Button
                android:id="@+id/bookmark_delete"
                android:text="삭제하기"
                android:layout_width="wrap_content"
                android:layout_height="26dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/list_style"
                android:scaleType="fitCenter"
                android:drawableRight="@drawable/ic_delete" />

    </LinearLayout>



    </LinearLayout>

</LinearLayout>